@using Syncfusion.Blazor.Popups
<h3>GestorArchivo</h3>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <SfFileManager TValue="FileManagerDirectoryContent">
                <FileManagerAjaxSettings Url="/api/Data/FileOperations"
                                         DownloadUrl="/api/Data/Download"
                                         UploadUrl="/api/Data/Upload">
                </FileManagerAjaxSettings>
            </SfFileManager>
        </div>
    </div>
</div>

<SfDialog Width="80%" Height="80%" ShowCloseIcon="true">
    <DialogPositionData X="center" Y="top"></DialogPositionData>
    <DialogTemplates>
        <Header>
            Visor PDF
        </Header>
        <Content>

        </Content>
    </DialogTemplates>
</SfDialog> 

